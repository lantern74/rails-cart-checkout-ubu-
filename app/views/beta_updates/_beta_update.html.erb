<style>
.form-check-label {
  cursor: pointer;
}

</style>


<div class="row">
  <div class="col-md-12">
    <div class="card w-100 px-4" style="max-width: 700px">
      <div class="card-body row align-items-center">


        <div class="col-md-10 p-2 text-left">
        <b><%= beta_update.name %></b>
        <br>
          <%= beta_update.description %>
        </div>
        <div class="col-md-1 p-2">
            <div class="form-check form-switch">

<% user_beta_update = current_user.user_beta_updates.find_by(beta_update: beta_update) %>

<%= check_box_tag 'user_beta_update[enabled]', '1', user_beta_update&.enabled || false, class: 'form-check-input toggleSwitch', id: "toggleSwitch_#{beta_update.id}", data: { update_url: beta_update_user_beta_update_path(beta_update.id) } %>

<label for="toggleSwitch_<%= beta_update.id %>" class="form-check-label"></label>


          </div>
        </div>
        <div class="col-md-1 p-2">
        <%= link_to 'Edit', edit_beta_update_path(beta_update), class: 'btn p-1 px-2' %>

        </div>

      </div>
    </div>
  </div>
</div>

