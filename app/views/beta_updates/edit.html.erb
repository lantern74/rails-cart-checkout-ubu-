
<div class="col-md-10 pt-3">
<!-- app/views/beta_updates/edit.html.erb -->
<h2>Edit Beta Update Preferences</h2>

<%= form_with(model: @beta_update, url: beta_update_path(@beta_update), method: :patch) do |form| %>
  <div class="row mb-3">
    <div class="col-6">
      <%= form.label :name %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>
    <div class="col-6">
      <%= form.label :description %>
      <%= form.text_area :description, class: 'form-control' %>
    </div>
  </div>



  <div class="actions">
    <%= form.submit 'Save Preferences' %>
  </div>
<% end %>

</div>
